{{ craft.app.config.general.devMode ? ('<!-- Template: ' ~ _self ~ ' -->') | raw }}
{% import "_/includes/macros" as render %}

{% set limit = block.limit|default('12') %}

{% set relatedTeam = block.relatedTeamMember.limit(limit).all() %}
{% if not relatedTeam|length %}
    {% set relatedTeam = craft.entries.section("team").limit(limit).all() %}
{% endif %}

{% set teamCategories = craft.categories.group("teamCategory").all() %}

<div class="space-y-24 {{ parent.eyebrow|length or parent.heading|length or parent.text|length ? 'mt-16' }}">
    {% for category in teamCategories %}
        <div>
            <div class="relative before:absolute after:absolute before:left-0 before:top-0 before:h-px before:w-6 after:left-8 after:right-0 after:top-0 after:h-px opacity-100 transform-none {{ render.foregroundColors({background: backgroundColorLabel, type: 'border'}) }}"></div>
            <div class="grid grid-cols-1 gap-6 pt-12 sm:pt-16 lg:grid-cols-4 xl:gap-8">
                <h2 class="font-display text-2xl font-semibold {{ render.foregroundColors({background: backgroundColorLabel, type: 'heading'}) }}">
                    {{ category.title }}
                </h2>

                <div class="lg:col-span-3">
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-8">
                        {% for team in relatedTeam %}
                            {% set teamCategory = team.teamCategory.one() %}

                            {% if category.title == teamCategory %}
                                {% set image = team.image.one() %}
                                <div class="group relative overflow-hidden rounded-3xl bg-neutral-100">
                                    {% if image|length %}
                                    {{ render.setImage({
                                        image: image,
                                        alt: image.title,
                                        width: image.width,
                                        height: image.height,
                                        class: 'h-96 w-full object-cover grayscale transition duration-500 motion-safe:group-hover:scale-105 text-transparent'
                                    }) }}
                                    {% endif %}

                                    <div class="absolute inset-0 flex flex-col justify-end bg-gradient-to-t from-black to-black/0 to-40% p-6">
                                        <p class="font-display text-base/6 font-semibold tracking-wide text-white">
                                            {{ team.title }}
                                        </p>

                                        {% if team.designation %}
                                        <p class="mt-2 text-sm text-white">
                                            {{ team.designation }}
                                        </p>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
