{{ craft.app.config.general.devMode ? ('<!-- Template: ' ~ _self ~ ' -->') | raw }}
{% import "_/includes/macros" as render %}

{% if block.tag|length %}
    <ul role="list" class="mt-4 flex flex-wrap gap-4">
        {% for tag in block.tag %}
            <li class="rounded-full px-4 py-1.5 text-base bg-neutral-100 text-neutral-600 ">
                {{ tag.title }}
            </li>
        {% endfor %}
    </ul>
{% endif %}