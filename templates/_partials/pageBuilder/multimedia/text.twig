{{ craft.app.config.general.devMode ? ('<!-- Template: ' ~ _self ~ ' -->') | raw }}
{% import "_/includes/macros" as render %}

{% set textCards = block.textCard.all() %}

{% if textCards|length %}
<ul role="list">
    {% for card in textCards %}
        {% if card.simpleText|length %}
        <li class="group mt-10 first:mt-0">
            <div class="pt-10 group-first:pt-0 group-first:before:hidden group-first:after:hidden relative before:absolute after:absolute before:left-0 before:top-0 before:h-px before:w-6 after:left-8 after:right-0 after:top-0 after:h-px {{ render.foregroundColors({background: backgroundColorLabel, opacity: overlayOpacity, changeDefaultColor: true, type: 'border'}) }}">
                {{ render.replaceElements(card.simpleText, {
                    background: backgroundColorLabel,
                    opacity: overlayOpacity,
                    changeDefaultColor: true,
                }) }}
            </div>
        </li>
        {% endif %}
    {% endfor %}
</ul>
{% endif %}