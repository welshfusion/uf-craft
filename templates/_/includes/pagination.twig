{% import "_/includes/macros" as render %}

{% set buttonColor = backgroundColorLabel in ['black', 'cyprus'] ? 'text-white hover:text-cyprus-500 border-netural-500 hover:bg-white' : 'text-cyprus-500 border-cyprus-500 hover:bg-cyprus-500 hover:text-white' %}
{% set paginationBtnClass = paginationBtnClass ?? 'load-more-btn' %}

<div class="text-center col-span-full {{ paginationBtnClass }}">
    <a href="{{ pageInfo.nextUrl }}" class="mt-20 inline-flex items-center text-xl rounded-full px-4 py-1.5 font-semibold transition duration-300 border {{ buttonColor }}"
        @click.prevent="filters.blockId = '{{ blockId }}', loadTableData(refresh = true , '{{ nextPageUrl }}');"
    >
        Load More
    </a>
</div>