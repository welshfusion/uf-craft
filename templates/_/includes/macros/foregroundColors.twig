{% set foregroundColors = {
    'heading' : {
        'none'         :  'text-cyprus-500',
        'white'        :  'text-cyprus-500',
        'black'        :  'text-white',
        'green'        :  'text-white',
        'cyprus'       :  'text-white',
    },
    'subHeading' : {
        'none'         :  'text-neutral-600',
        'white'        :  'text-neutral-600',
        'black'        :  'text-neutral-300',
        'green'        :  'text-white',
        'cyprus'       :  'text-neutral-300',
    },
    'border' : {
        'none'         :  'border-green-500',
        'white'        :  'border-green-500',
        'black'        :  'border-green-500',
        'green'        :  'border-neutral-500',
        'cyprus'       :  'border-green-500',
    }
} %}
{% if type is iterable %}
    {% for item in type %}
        {{ foregroundColors[item][background] ?? null }}
    {% endfor %}
{% else %}
    {{ foregroundColors[type][background] ?? null }}
{% endif %}
