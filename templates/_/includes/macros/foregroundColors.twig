{% set foregroundColors = {
    'heading' : {
        'none'         :  'text-cyprus-500',
        'white'        :  'text-cyprus-500',
        'black'        :  'text-white',
        'green'        :  'text-white',
        'cyprus'       :  'text-white',
    },
    'subHeading' : {
        'none'         :  'text-neutral-600',
        'white'        :  'text-neutral-600',
        'black'        :  'text-neutral-300',
        'green'        :  'text-white',
        'cyprus'       :  'text-neutral-300',
    },
    'border' : {
        'none'         :  'before:bg-green-500 after:bg-neutral-950/10',
        'white'        :  'before:bg-green-500 after:bg-neutral-950/10',
        'black'        :  'before:bg-green-500 after:bg-neutral-800',
        'green'        :  'before:bg-white after:bg-white/20',
        'cyprus'       :  'before:bg-green-500 after:bg-white/10',
    },
    'button' : {
        'none'         :  'text-white bg-cyprus-500 hover:bg-green-500',
        'white'        :  'text-white bg-cyprus-500 hover:bg-green-500',
        'black'        :  'text-cyprus-500 bg-white hover:bg-green-500 hover:text-white',
        'green'        :  'text-white bg-cyprus-500 hover:bg-white hover:text-cyprus-500',
        'cyprus'       :  'text-cyprus-500 bg-white hover:bg-green-500 hover:text-white',
    },
    'cardHover' : {
        'none'         :  'hover:bg-neutral-50 ring-neutral-950/20',
        'white'        :  'hover:bg-neutral-50 ring-neutral-950/20',
        'black'        :  'hover:bg-white/20 ring-white/50 bg-white/30',
        'green'        :  'hover:bg-white/20 ring-neutral-950/20 bg-white/30',
        'cyprus'       :  'hover:bg-white/20 ring-neutral-950/20 bg-white/30',
    }
} %}
{% if type is iterable %}
    {% for item in type %}
        {{ foregroundColors[item][background] ?? null }}
    {% endfor %}
{% else %}
    {{ foregroundColors[type][background] ?? null }}
{% endif %}
