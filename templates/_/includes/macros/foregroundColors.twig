{% set foregroundColors = {
    'heading' : {
        'none'         :  'text-cyprus-500',
        'white'        :  'text-cyprus-500',
        'black'        :  'text-white',
        'green'        :  'text-white',
        'cyprus'       :  'text-white',
    },
    'subHeading' : {
        'none'         :  'text-neutral-600',
        'white'        :  'text-neutral-600',
        'black'        :  'text-neutral-300',
        'green'        :  'text-white',
        'cyprus'       :  'text-neutral-300',
    },
    'border' : {
        'none'         :  'before:bg-green-500 after:bg-neutral-950/10',
        'white'        :  'before:bg-green-500 after:bg-neutral-950/10',
        'black'        :  'before:bg-green-500 after:bg-neutral-800',
        'green'        :  'before:bg-white after:bg-white/20',
        'cyprus'       :  'before:bg-green-500 after:bg-white/10',
    },
    'detailPagelink' : {
        'none'         :  'text-cyprus-500 group-hover:text-neutral-700',
        'white'        :  'text-cyprus-500 group-hover:text-neutral-700',
        'black'        :  'text-white group-hover:text-neutral-400',
        'green'        :  'text-white group-hover:text-neutral-200',
        'cyprus'       :  'text-white group-hover:text-neutral-400'
    },
    'detailPageButton' : {
        'none'         :  'text-white bg-cyprus-500 hover:bg-green-500',
        'white'        :  'text-white bg-cyprus-500 hover:bg-green-500',
        'black'        :  'text-cyprus-500 hover:text-white bg-white hover:bg-green-500',
        'green'        :  'text-cyprus-500 hover:text-white bg-white hover:bg-cyprus-500',
        'cyprus'       :  'text-cyprus-500 hover:text-white bg-white hover:bg-green-500',
    },
    'cardHover' : {
        'none'         :  'ring-neutral-950/5 hover:bg-neutral-50',
        'white'        :  'ring-neutral-950/5 hover:bg-neutral-50',
        'black'        :  'ring-white/20 hover:bg-white/10',
        'green'        :  'ring-green-950/20 hover:bg-white/10',
        'cyprus'       :  'ring-cyprus-950/40 hover:bg-white/10',
    }
} %}
{% if type is iterable %}
    {% for item in type %}
        {{ foregroundColors[item][background] ?? null }}
    {% endfor %}
{% else %}
    {{ foregroundColors[type][background] ?? null }}
{% endif %}
