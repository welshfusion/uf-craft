{% set animationAttributes = {} %}
{% if animation %}
    {% if animationStyle|length or animationStyle.getValue() != 'none' %}
        {% set animationAttributes = {
            'data-aos': animationStyle,
            'data-aos-offset': animationOffset,
            'data-aos-duration': animationDuration,
            'data-aos-easing': animationEasing,
            'data-aos-delay': animationDelay
        } %}
    {% endif %}
{% endif %}

{{ attr(animationAttributes) }}